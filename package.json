{
  "name": "react_node_blogger",
  "version": "1.0.0",
  "description": "个人博客系统 - 毕业设计项目",
  "private": true,
  "workspaces": [
    "client",
    "worker"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "worker": "npm run dev --workspace=worker",
    "dev": "concurrently \"npm run dev --workspace=worker\" \"npm run dev --workspace=client\"",
    "dev:cf": "concurrently \"npm run dev --workspace=worker\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=client",
    "deploy:cf": "npm run build --workspace=client && npm run deploy --workspace=worker",
    "d1:migrate": "npm run migrate --workspace=worker",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
